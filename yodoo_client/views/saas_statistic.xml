<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='integration']" position="after">
                <block title="Yodoo Statistics" name="yodoo_database_statistics">
                    <div class="col-12 col-lg-6 o_setting_box mb0">
                        <div class="o_setting_right_pane">
                            <label for="users_total_count" string="Users Total"/>
                            <field name="users_total_count" class="badge rounded-pill bg-secondary w-auto ms-2" style="font-size: 100%;"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="users_internal_count" string="Users Internal"/>
                            <field name="users_internal_count" class="badge rounded-pill bg-secondary w-auto ms-2" style="font-size: 100%;"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="users_external_count" string="Users External"/>
                            <field name="users_external_count" class="badge rounded-pill bg-secondary w-auto ms-2" style="font-size: 100%;"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box mb0">
                        <div class="o_setting_right_pane">
                            <label for="db_storage"/>
                            <field name="db_storage" class="badge rounded-pill bg-secondary w-auto ms-2" style="font-size: 100%;"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="file_storage"/>
                            <field name="file_storage" class="badge rounded-pill bg-secondary w-auto ms-2" style="font-size: 100%;"/>
                        </div>
                    </div>
                </block>
                <block title="Yodoo Settings" name="yodoo_database_settings">
                    <setting string="Allow administrative logins">
                        <field name="yodoo_allow_admin_logins"/>
                        <div invisible="not yodoo_allow_admin_logins" class="content-group mt16">
                            <button name="%(action_show_active_auth_sessions)d"
                                    type="action"
                                    string="Show admin auth sessions"
                                    class="oe_link"/>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
